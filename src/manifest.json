{
  "manifest_version": 3,
  "name": "QuickPrompts",
  "version": "1.0.0",
  "description": "Quickly inject predefined prompts into conversations",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "QuickPrompts",
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://grok.com/*",
        "https://x.com/i/grok/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://t3.chat/*",
        "https://claude.ai/*",
        "*://*.mistral.ai/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://grok.com/*",
    "https://x.com/i/grok/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://t3.chat/*",
    "https://claude.ai/*",
    "*://*.mistral.ai/*"
  ]
}
